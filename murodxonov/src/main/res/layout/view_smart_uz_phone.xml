<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/bg_drawable"
    android:paddingHorizontal="16dp"
    android:animateLayoutChanges="true">

    <TextView
        android:id="@+id/tvPrefix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+998"
        android:textColor="#1A1C1E"
        android:textSize="17sp"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider"
        android:layout_width="1dp"
        android:layout_height="24dp"
        android:layout_marginStart="12dp"
        android:background="#E0E0E0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvPrefix"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etNumber"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="12dp"
        android:background="@android:color/transparent"
        android:hint="90 123 45 67"
        android:inputType="phone"
        android:maxLength="12"
        android:textSize="17sp"
        android:letterSpacing="0.05"
        android:textColor="#1A1C1E"
        android:textColorHint="#9AA0A6"
        app:layout_constraintEnd_toStartOf="@+id/ivValidation"
        app:layout_constraintStart_toEndOf="@id/divider" />

    <ImageView
        android:id="@+id/ivValidation"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:alpha="0"
        android:src="@drawable/baseline_check_circle_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>